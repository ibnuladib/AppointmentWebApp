@model List<AppointmentWebApp.Models.AppointmentCount>

@if (Model == null || !Model.Any())
{
    <p>No appointment data available.</p>
}
else
{
    <div style="width: 600px; height: 300px;">
        <canvas id="appointmentsChart"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('appointmentsChart').getContext('2d');
        var appointmentsChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.Select(ac => ac.Date.ToString("MM/dd/yyyy").ToList()))),
                datasets: [{
                    label: 'Total Appointments',
                    data: @Html.Raw(Json.Serialize(Model.Select(ac => ac.Count).ToList())),
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
