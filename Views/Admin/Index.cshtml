@model AppointmentWebApp.Models.AdminViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        .log-container {
            width: 80%;
            height: 100%;
            background-color: #1e1e1e;
            color: #c7c7c7;
            overflow-y: auto;
            font-family: 'Courier New', Courier, monospace;
            padding: 10px;
            box-sizing: border-box;
        }

        .log-title {
            font-size: 1.2em;
            margin-bottom: 10px;
            color: #ffffff;
        }

        #logList {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            #logList li {
                margin: 2px 0;
                padding: 5px;
                border-bottom: 1px solid #444;
            }

        .graph-container {
            width: 60%;
            height: 100%;
            background-color: #ffffff;
            padding: 10px;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="log-container">
            <div class="log-title">Real-time Logs</div>
            <ul id="logList">
                @await Html.PartialAsync("_PartialLogs", Model.Logs)
            </ul>
        </div>
        <div class="graph-container">
            @await Html.PartialAsync("_PartialGraph", Model.AppointmentCounts)
        </div>
    </div>
</body>
</html>