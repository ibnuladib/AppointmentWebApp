@{
    ViewData["Title"] = "Baymax Care";
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Services Landing Page</title>

    <!-- CSS Styles -->
    <style>
        /* Global Styles */
        .services {
            padding: 4rem 2rem;
            text-align: center;
            background-color: #f0f4f8;
        }

            .services h2 {
                font-size: 2.5rem;
                margin-bottom: 2rem;
            }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-gap: 2rem;
        }

        .service-item {
            background-color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

            .service-item img {
                width: 4rem;
                height: 4rem;
                margin-bottom: 1rem;
            }

            .service-item h3 {
                font-size: 1.5rem;
                margin-bottom: 1rem;
            }

            .service-item p {
                font-size: 1.1rem;
                margin-bottom: 1.5rem;
            }

            .service-item .learn-more {
                display: inline-block;
                background-color: #4a5568;
                color: white;
                padding: 0.75rem 1.5rem;
                border-radius: 0.25rem;
                text-decoration: none;
                font-size: 1.1rem;
                transition: background-color 0.3s;
            }

                .service-item .learn-more:hover {
                    background-color: #6b7280;
                }
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f0f4f8;
        }

        /* Navigation Bar Styles */
        .navbar {
            background-color: #000000;
            padding: .5em;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .navbar .logo {
            color: rgb(247, 237, 237);
            font-size: 1.5em;
            font-weight: bold;
        }
        .navbar .nav-links {
            list-style: none;
            display: flex;
            gap: 1.5em;
        }

        .navbar .nav-links li {
            display: inline;
        }

        .navbar .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 1.1em;
        }

        .navbar .nav-links a:hover {
            color: #e9c46a;
        }

        /* Landing Section Styles */
        .landing-section {
            height: 100vh;
            background: url('healthcare-banner.jpg') no-repeat center center/cover;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
        }

        .landing-section .landing-text h1 {
            font-size: 3em;
            margin-bottom: 0.5em;
        }

        .landing-section .landing-text p {
            font-size: 1.2em;
            margin-bottom: 1em;
        }

        .landing-section .btn {
            background-color: #e76f51;
            padding: 0.8em 2em;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

        .landing-section .btn:hover {
            background-color: #f4a261;
        }

        /* About, Services, Contact Section Styles */
        section {
            padding: 4em 2em;
            text-align: center;
        }

        #about, #services, #contact {
            background-color: #fff;
            margin: 1em 0;
        }

        #services ul {
            list-style-type: none;
            padding: 0;
        }

        #services li {
            font-size: 1.1em;
            margin: 0.5em 0;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="logo">BayMax Healthcare </div>
        <ul class="nav-links"
            <li>
                <a href="@Url.Page("/Account/Login", new { area = "Identity" })">log in</a>
                </li>
            <li><a href="registerlink">Register</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </nav>

    <!-- Landing Section -->
    <section id="home" class="landing-section" style=" height: 50vh; background-image: url('your-image.jpg'); background-size: cover; background-position: center; position: relative;">
        <!-- Optional Overlay for Better Text Visibility -->
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5);"></div>

        <!-- Text Content -->
        <div style="position: relative; z-index: 1; color: white; text-align: center; padding-top: 10vh;">
            <h1>Welcome to Healthcare Services</h1>
            <p>Your health is our priority. We provide top-quality medical services.</p>
        </div>
    </section>


    <!-- find doctor, locations, appointment section -->
    <section class="services">
        <h2>Our Services</h2>
        <div class="services-grid">
            <div class="service-item">
                <img src="" alt="Icon1">
                <h3>Appointment</h3>
                <p>Book an Appointment</p>
                <a href="#" class="learn-more">Book an Appointment</a>
            </div>
            <div class="service-item">
                <img src="" alt="Icon2">
                <h3>Search for Doctors</h3>
                <p>Search for doctors</p>
                <a href="#" class="learn-more">Search for doctor</a>
            </div>
            <div class="service-item">
                <img src="" alt="Icon3">
                <h3>Make Account</h3>
                <p>Make an Account</p>
                <a href="#" class="learn-more">Make an Account</a>
            </div>
        </div>
    </section>

    <section id="contact" class="contact">
        <h2>Contact Us</h2>
        <div class="contact-info">
            <p>Address: 123 Health St, Wellness City, HC 56789</p>
            <p>Email: contact@healthcare.com</p>
            <p>Phone: +1 234 567 890</p>
        </div>
    </section>
</body>

</html>
